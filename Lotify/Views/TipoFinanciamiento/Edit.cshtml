@model Lotify.Models.Ventas.TipoFinanciamientoViewModels
<div class="content-grid mdl-grid">
    <div class="mdl-cell mdl-cell--4-col"></div>
    <div class="mdl-cell mdl-cell--4-col">

        @using (Html.BeginForm("Edit", "TipoFinanciamiento", FormMethod.Post))
        {
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.LabelFor(m => m.Plazo, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.Plazo, new { @class = "mdl-textfield__input" })
            </div>

            <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--raised"
                   value="Actualizar" />
        }
    </div>
    <div class="mdl-cell mdl-cell--4-col"></div>
</div>
