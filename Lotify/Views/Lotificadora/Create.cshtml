@model Lotify.Models.Lotes.LotificadoraViewModels

@using (Html.BeginForm("Create", "Lotificadora", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.NombreLotificadora, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.NombreLotificadora, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Direccion, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Direccion, new { @class = "mdl-textfield__input" })
    </div>



    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           value="Registrarse" />
}
