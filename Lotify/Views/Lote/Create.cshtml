@model Lotify.Models.Lotes.LoteViewModels

@using (Html.BeginForm("Create", "Lote", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.NumeroLote, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.NumeroLote, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Precio, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Precio, new { @class = "mdl-textfield__input" })
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <select name="MedidaId" id="MedidaId">
            @foreach (var item in Model.Medidas) 
            {
                <option value="@item.Id">@item.Largo x @item.Ancho</option>
            }
        </select>
    </div>

    

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <select name="LotificadoraId" id="LotificadoraId">
            @foreach (var item in Model.Lotificadora)
            {
                <option value="@item.Id">@item.NombreLotificadora</option>
            }
        </select>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <select name="ManzanaId" id="ManzanaId">
            @foreach (var item in Model.Manzana)
            {
                <option value="@item.Id">@item.NombreManzana</option>

            }
        </select>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <select name="AreaId" id="AreaId">
            @foreach (var item in Model.Area)
            {
                <option value="@item.Id">@item.NombreArea</option>

            }
        </select>
    </div>




    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           value="Registrarse" />
}
