@model Lotify.Models.Ventas.VentaViewModels

@using (Html.BeginForm("Edit", "Venta", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Abono, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Abono, new { @class = "mdl-textfield__input" })
    </div>
    @Html.HiddenFor(m => m.Cuota)


    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--raised"
           value="Actualizar" />
}

