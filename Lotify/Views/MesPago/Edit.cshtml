@model Lotify.Models.Pagos.MesPagoViewModels

@using (Html.BeginForm("Edit", "MesPago", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.NombreMes, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.NombreMes, new { @class = "mdl-textfield__input" })
    </div>

    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           value="Actualizar" />
}

