@model Lotify.Models.Lotes.AreaViewModels

@using (Html.BeginForm("Create", "Area", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.NombreArea, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.NombreArea, new { @class = "mdl-textfield__input" })
    </div>
    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           value="Registrarse" />
}
