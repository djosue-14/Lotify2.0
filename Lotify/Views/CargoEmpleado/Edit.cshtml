@model Lotify.Models.Empleados.CargoEmpleadoViewModels

@using (Html.BeginForm("Edit", "CargoEmpleado", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.NombreCargo, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.NombreCargo, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Sueldo, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Sueldo, new { @class = "mdl-textfield__input" })
    </div>


    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           value="Actualizar" />
}
