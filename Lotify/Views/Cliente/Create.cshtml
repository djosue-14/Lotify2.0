
@model Lotify.Models.Clientes.ClienteViewModels

@using (Html.BeginForm("Create", "Cliente", FormMethod.Post))
{
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Nombre, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Nombre, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Apellido, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Apellido, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Dpi, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Dpi, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Genero, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Genero, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.Direccion, new { @class = "mdl-textfield__label" })
        @Html.TextBoxFor(m => m.Direccion, new { @class = "mdl-textfield__input" })
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.EditorFor(m => m.FechaNacimiento, new { @type = "date" })
    </div>
    <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           value="Registrarse" />
}
