@model Lotify.Models.Clientes.EstadoClienteViewModels

@using (Html.BeginForm("Create", "EstadoCliente", FormMethod.Post))
{
    <div class="content-grid mdl-grid">
        <div class="mdl-cell mdl-cell--4-col"></div>
        <div class="mdl-cell mdl-cell--2-col">
            <h5>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => m.NombreEstado, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => m.NombreEstado, new { @class = "mdl-textfield__input" })
                </div>
            </h5>
        </div>
        <div class="mdl-cell mdl-cell--1-col">
            <h1>
                <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--raised"
                       value="Registrarse" />
            </h1>
        </div>
        <div class="mdl-cell mdl-cell--1-col"></div>
        <div class="mdl-cell mdl-cell--1-col"></div>
        <div class="mdl-cell mdl-cell--1-col"></div>
        <div class="mdl-cell mdl-cell--1-col"></div>
        <div class="mdl-cell mdl-cell--1-col"></div>
    </div>


}

