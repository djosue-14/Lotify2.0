@model Lotify.Models.Clientes.EstadoClienteViewModels

<div class="content-grid mdl-grid">

    <div class="mdl-cell mdl-cell--4-col"></div>

    <div class="mdl-cell mdl-cell--4-col">

        @using (Html.BeginForm("Edit", "EstadoCliente", FormMethod.Post))
        {
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.LabelFor(m => m.NombreEstado, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.NombreEstado, new { @class = "mdl-textfield__input" })
            </div>

            <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect"
                   value="Actualizar" />
        }

    </div>

    <div class="mdl-cell mdl-cell--4-col"></div>

</div>
